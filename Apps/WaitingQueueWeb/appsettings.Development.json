{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "BCGov.WaitingQueue": "Debug"
        }
    },
    "RedisConnection": "localhost:6379,abortConnect=false",
    "RoomHealthGateway": {
        "Name": "HealthGateway",
        "CheckInFrequency": 120,
        "CheckInGrace": 30,
        "RoomIdleTtl": 300,
        "ParticipantLimit": 10,
        "QueueThreshold": 5,
        "QueueMaxSize": 10,
        "RemoveExpiredMax": 250
    },
    "RoomARD": {
        "Name": "ARD",
        "CheckInFrequency": 120,
        "CheckInGrace": 100,
        "RoomIdleTtl": 300,
        "ParticipantLimit": 1000,
        "QueueThreshold": 500,
        "QueueMaxSize": 5000,
        "RemoveExpiredMax": 250
    },
    "TokenIssuer": "InternalIssuer",
    "KeycloakIssuer": {
        "BaseUri": "https://dev.loginproxy.gov.bc.ca/auth/realms/health-gateway-gold",
        "RoomConfiguration": {
            "HealthGateway": {
                "ClientId": "***",
                "ClientSecret": "***",
                "GrantType": "client_credentials"
            },
            "ARD": {
                "ClientId": "***",
                "ClientSecret": "***",
                "GrantType": "client_credentials"
            }
        }
    },
    "InternalIssuer": {
        "RoomConfiguration": {
            "HealthGateway": {
                "Issuer": "https://tickets.healthgateway.gov.bc.ca/HealthGateway",
                "TokenTtl": 300,
                "Certificates": [
                    {
                        "CertificatePath": "***",
                        "CertificatePassword": "***"
                    }
                ]
            },
            "ARD": {
                "Issuer": "https://localhost:8000/ARD",
                "TokenTtl": 300,
                "Certificates": [
                    {
                        "CertificatePath": "***",
                        "CertificatePassword": "***"
                    }
                ]
            }
        }
    }
}
